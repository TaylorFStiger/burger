<body style="font-family: margarine, cursive">
  <main>
    <p class="display-1  text-center" font-family='Fontdiner Swanky' id="title"><u>Eat Da Burger!</u></p>
    <div class="text-center">
      <img src="assets/img/burger.png" class="rounded" id="burgerPic" alt="Cheeseburger" style="inline-size:250px">
      <div class="col-md">

          <h2 class="add" style="font-family:fontdiner swanky">Add A Burger Option</h2>
          <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Delicious Burger">
            <button type="submit" class="addBurger">Add The Burger</button>
          </form><br><br>
    </div>
    <div class="container" id="bodyContent">
      
    <div class="container">
      <div class="row">
        
        <div class="col s6" style="background-color:rgba(250, 248, 248, 0.5); border:yellowgreen dashed 5px"> <h1 class="mb-5"><u><b>You Need To Eat These Burgers!</b></u></h1>
          {{#each burgers}}
          {{#unless this.devoured}}
          
            <p class="notDevoured" style="font-family:fontdiner swanky; color:palevioletred; display:inline-block">{{this.burger_name}}</p>
            <button type="submit" class='eatburger' data-id="{{this.id}}" style="display:inline-block"> Devour It!</button><br>
          
          {{/unless}}
          {{/each}}


        </div>
        <div style="background-color:rgba(250, 248, 248, 0.5); border:yellowgreen dashed 5px">

          <h1><b><u style="font-family:fontdiner swanky,cursive;">Burgers You've Devoured</u></b></h1><br>

        {{!-- </div><hr>
        <div class="col-6"></div> --}}
          <div class="col-12">
            {{#each burgers}}
            {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                <p class="devoured" style="font-family:fontdiner swanky; color:palevioletred;">{{this.burger_name}}</p>
              </div>
            </div>
            {{/if}}
            {{/each}}

          </div>
        </div>
      </div>
    </div>
  </div>

    </div>

  <footer class="mt-5">&copy2019 eyeofthestigersolutons</footer>



  
  </main>
</body>