<body style="font-family: margarine, cursive">
  <main>
    <p class="display-1  text-center" font-family='Fontdiner Swanky' id="title"><u>Eat Da Burger!</u></p>
    <div class="text-center">
      <img src="assets/img/burger.png" class="rounded" id="burgerPic" alt="Cheeseburger" style="inline-size:250px">
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md">

          <h2 class="add" style="font-family:fontdiner swanky">Add A Burger Option</h2>
          <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="Delicious Burger">
            <button type="submit" class="addBurger">Add The Burger</button>
          </form><br><br>

        </div>
      </div>

    </div>

  



  <div class="container" id="bodyContent">

    <div class="container">
      <div class="row">
        <div class="col s6">
          {{#each burgers}}
          {{#unless this.devoured}}
          <div>
            <p class="notDevoured" style="font-family:fontdiner swanky; float:left">{{this.burger_name}}</p>
            <button type="submit" class='eatburger' data-id="{{this.id}}" style="float:left"> Devour It!</button>
          </div>
          {{/unless}}
          {{/each}}


        </div>
        <div class="row">

          <h1><b><u style="font-family:margarine,cursive">Burgers You've Devoured</u></b></h1><br>

        {{!-- </div><hr>
        <div class="col-6"></div> --}}
          <div class="col-6">
            {{#each burgers}}
            {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                <p class="devoured" style="font-family:fontdiner swanky">{{this.burger_name}}</p>
              </div>
            </div>
            {{/if}}
            {{/each}}

          </div>
        </div>
      </div>
    </div>
  </div>
  </main>
</body>